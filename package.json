{
  "name": "thufir",
  "displayName": "thufir",
  "description": "An open source AI extension for VS Code to help devs with SRE duties",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other",
    "Visualization",
    "Monitoring"
  ],
  "activationEvents": [
    "onView:serverExplorer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "server-monitoring",
          "title": "Server Monitoring",
          "icon": "resources/server.svg"
        }
      ],
      "panel": [
        {
          "id": "ai-assistant",
          "title": "AI Assistant",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "server-monitoring": [
        {
          "id": "serverExplorer",
          "name": "Servers",
          "icon": "resources/server.svg",
          "contextualTitle": "Server Explorer"
        },
        {
          "id": "serverMetrics",
          "name": "Server Metrics",
          "icon": "resources/metrics.svg",
          "contextualTitle": "Server Metrics"
        }
      ],
      "ai-assistant": [
        {
          "id": "chat",
          "name": "Chat",
          "icon": "$(comment-discussion)",
          "type": "webview"
        },
        {
          "id": "sreAgent",
          "name": "SRE Agent",
          "icon": "$(tools)",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "serverExplorer.addServer",
        "title": "Add Server",
        "icon": "$(add)"
      },
      {
        "command": "serverExplorer.addLocalPrometheus",
        "title": "Add Local Prometheus",
        "icon": "$(graph-line)"
      },
      {
        "command": "serverExplorer.removeServer",
        "title": "Remove Server",
        "icon": "$(trash)"
      },
      {
        "command": "serverExplorer.connect",
        "title": "Connect to Server",
        "icon": "$(plug)"
      },
      {
        "command": "serverExplorer.disconnect",
        "title": "Disconnect from Server",
        "icon": "$(debug-disconnect)"
      },
      {
        "command": "serverExplorer.refresh",
        "title": "Refresh Metrics",
        "icon": "$(refresh)"
      },
      {
        "command": "serverExplorer.configurePrometheus",
        "title": "Configure Prometheus",
        "icon": "$(graph)"
      },
      {
        "command": "serverExplorer.openPrometheusDashboard",
        "title": "Open Prometheus Dashboard",
        "icon": "$(graph-scatter)"
      },
      {
        "command": "thufir.openAIAnalysis",
        "title": "Open Chat",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "thufir.configureLLM",
        "title": "Configure AI Provider",
        "icon": "$(settings-gear)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "serverExplorer.addServer",
          "when": "view == serverExplorer",
          "group": "navigation"
        },
        {
          "command": "serverExplorer.addLocalPrometheus",
          "when": "view == serverExplorer",
          "group": "navigation"
        },
        {
          "command": "serverExplorer.refresh",
          "when": "view == serverExplorer",
          "group": "navigation"
        },
        {
          "command": "thufir.openAIAnalysis",
          "when": "view == chat",
          "group": "navigation@1"
        },
        {
          "command": "thufir.configureLLM",
          "when": "view == chat",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "serverExplorer.connect",
          "when": "view == serverExplorer && viewItem == disconnectedServer",
          "group": "inline"
        },
        {
          "command": "serverExplorer.disconnect",
          "when": "view == serverExplorer && viewItem == connectedServer",
          "group": "inline"
        },
        {
          "command": "serverExplorer.removeServer",
          "when": "view == serverExplorer",
          "group": "inline"
        },
        {
          "command": "serverExplorer.configurePrometheus",
          "when": "view == serverExplorer",
          "group": "inline"
        },
        {
          "command": "serverExplorer.openPrometheusDashboard",
          "when": "view == serverExplorer && viewItem =~ /(connectedServer|localPrometheus)/",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Server Monitoring",
      "properties": {
        "serverMonitoring.refreshInterval": {
          "type": "number",
          "default": 5000,
          "description": "Interval in milliseconds to refresh server metrics"
        },
        "thufir.llm.provider": {
          "type": "string",
          "enum": ["openai", "anthropic", "google"],
          "description": "The AI provider to use for analysis"
        },
        "thufir.llm.apiKey": {
          "type": "string",
          "description": "API key for the selected AI provider"
        },
        "thufir.llm.model": {
          "type": "string",
          "description": "The model to use for the selected AI provider"
        }
      }
    },
    "keybindings": [
      {
        "command": "thufir.openAIAnalysis",
        "key": "ctrl+t",
        "mac": "cmd+t"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "chart.js": "^4.4.1",
    "node-os-utils": "^1.3.7",
    "ssh2": "^1.16.0",
    "systeminformation": "^5.21.22"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/ssh2": "^1.15.4",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  }
}
